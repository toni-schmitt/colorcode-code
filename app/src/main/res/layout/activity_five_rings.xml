<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiveRingsActivity">


    <Spinner
        android:id="@+id/spinner_5_2"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginStart="@dimen/const_sp_sp"
        android:layout_marginLeft="@dimen/const_sp_sp"
        android:layout_marginTop="@dimen/const_top_sp"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toEndOf="@+id/spinner_5_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_5_1"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginStart="@dimen/const_leftRight_sp"
        android:layout_marginLeft="@dimen/const_leftRight_sp"
        android:layout_marginTop="@dimen/const_top_sp"
        android:backgroundTintMode="src_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_5_3"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginStart="@dimen/const_sp_sp"
        android:layout_marginTop="@dimen/const_top_sp"
        android:layout_marginEnd="@dimen/const_sp_sp"
        android:backgroundTintMode="src_in"
        app:layout_constraintEnd_toStartOf="@+id/spinner_5_4"
        app:layout_constraintStart_toEndOf="@+id/spinner_5_2"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_5_4"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginTop="@dimen/const_top_sp"
        android:layout_marginEnd="@dimen/const_sp_sp"
        android:layout_marginRight="@dimen/const_sp_sp"
        android:backgroundTintMode="src_in"
        app:layout_constraintEnd_toStartOf="@+id/spinner_5_5"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_5_5"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginTop="@dimen/const_top_sp"
        android:layout_marginEnd="@dimen/const_leftRight_sp"
        android:layout_marginRight="@dimen/const_leftRight_sp"
        android:backgroundTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_BackFiveRings"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/const_sp_sp"
        android:layout_marginLeft="@dimen/const_sp_sp"
        android:layout_marginBottom="@dimen/const_sp_sp"
        android:text="@string/btn_back"
        app:icon="@drawable/abc_vector_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:layout_width="@dimen/rdg_width"
        android:layout_height="@dimen/rdg_heigth"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_5_2">

        <Button
            android:id="@+id/btn_Continue_FiveRings"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/rdigrp_margin"
            android:layout_marginBottom="@dimen/rdigrp_margin"
            android:text="@string/btn_calc" />

        <TextView
            android:id="@+id/tv_Resistance_FiveRings"
            android:layout_width="@dimen/tv_width"
            android:layout_height="@dimen/tv_height"
            android:layout_marginTop="@dimen/rdigrp_margin"
            android:layout_marginBottom="@dimen/rdigrp_margin"
            android:gravity="center_horizontal"
            android:text="@string/tvResistance"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Tolerance_FiveRings"
            android:layout_width="@dimen/tv_width"
            android:layout_height="@dimen/tv_height"
            android:layout_marginTop="@dimen/rdigrp_margin"
            android:layout_marginBottom="@dimen/rdigrp_margin"
            android:gravity="center_horizontal"
            android:text="@string/tvTolerance"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>