<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<RadioGroup
        android:id="@+id/rg_RingGroup"
        android:layout_width="374dp"
        android:layout_height="179dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_ringCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rings_count" />

        <RadioButton
            android:id="@+id/rb_ThreeRings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three_rings" />

        <RadioButton
            android:id="@+id/rb_FourRings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four_rings" />

        <RadioButton
            android:id="@+id/rb_FiveRings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/five_rings" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_Continue"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="219dp"
        android:text="@string/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_RingGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>